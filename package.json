    "scripts": {
    // פקודה להרצה בסביבת dev (שומרת על הפיצול בין frontend ו-backend)
    "dev": "concurrently \"npm run server\" \"npm run client\"",
 
    // build של React ל-build/
    "build": "react-scripts build",
 
    // Heroku/Postinstall – יבנה את ה-frontend אוטומטית
    "heroku-postbuild": "npm run build",
 
    // start בסביבת prod – מריץ את ה-server, שמשרת גם את ה-static של React
    "start": "node backend/server.js",
 
    // Dev-only: הפעלת ה-backend וה-frontend בנפרד
    "server": "cd backend && npm start",
    "client": "react-scripts start"
  },
  "eslintConfig": {
    "extends": [
